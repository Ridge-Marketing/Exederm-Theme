$(document).ready(function() {
    $('.nav__dropdown__test').click(function() {
        let myvar= $(this).attr('value');
        if ($(myvar).is(':visible')) {
            $(myvar).hide();
            $(this).removeClass('tw-text-white tw-bg-green').addClass('tw-text-black');
            $(this).find('.fa-minus').hide();
            $(this).find('.fa-plus').show();
        } else {
            $(myvar).show();
            $(this).removeClass('tw-text-black').addClass('tw-text-white tw-bg-green');
            $(this).find('.fa-plus').hide();
            $(this).find('.fa-minus').show();
        }
    })
})
function toggleNavDrawer(num) {
    // num = 1 when drawer is closed, num = 0 when drawer is open 
    if (num > 0) {
    $("#navDrawer__test").css('transform', 'translateX(0)').addClass('tw-shadow-0-0-7-33');
} else {
    $("#navDrawer__test").css('transform', 'translateX(-18.75rem)').removeClass('tw-shadow-0-0-7-33');
    }  
}


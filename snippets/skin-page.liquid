<div class="tw-h-52 tw-relative tw-pt-1px tw-bg-cover {{img_class}}" style="background-image:url('{{pages[page.handle].metafields.bg_image.hero}}')">
    <div class="tw-container tw-px-5 tw-mx-auto lg:tw-px-10 2xl:tw-pl-0 2xl:tw-pr-0 xl:tw-max-w-screen-xl">
        <div class="tw-bg-white tw-opacity-80 lg:tw-opacity-100 lg:tw-bg-transparent tw-w-64 lg:tw-w-auto tw-mt-14">
            <h2 class="tw-text-32px/40px lg:tw-text-45px/56px {{color_class}} tw-pt-5 tw-pb-6 tw-pl-4 lg:tw-pl-0 tw-pr-8">
                {{page.title}}
            </h2>
        </div>
    </div>
    </div>

    <div class="tw-bg-tan tw-mb-6 lg:tw-mb-8 tw-py-9 lg:tw-pb-14 xx">
        <div class="tw-container tw-px-5 tw-mx-auto lg:tw-px-10 2xl:tw-pl-0 2xl:tw-pr-0 xl:tw-max-w-screen-xl">
                <h2 class="tw-text-matterhorn tw-text-26px/33px tw-pb-7 tw-pr-2 lg:tw-pr-8 2xl:tw-pr-0">{{pages[page.handle].metafields.text.subhero-heading}} </h2>
                <p class="tw-text-black tw-text-18px/24px lg:tw-text-20px/25px tw-font-encode-sans tw-font-medium md:tw-pr-5 2xl:tw-pr-0">
                    {{pages[page.handle].metafields.text.subhero-paragraph}}
                </p>
        </div>
    </div>
    {% if content_type_class == 'skin-blocks' %}
    <div class="tw-mb-12">
        <div class="tw-container tw-px-5 md:tw-pr-12 lg:tw-pr-5 lg:tw-pl-10 2xl:tw-pl-0 xl:tw-max-w-screen-xl tw-mx-auto lg:tw-grid lg:tw-grid-cols-2">
            {% for field in pages[page.handle].metafields.content_sections %} 
            <div class="tw-pb-8 {{content_type_class}}">
                {{field | last}}
            </div>
            {% endfor %}
        </div>
    </div>
    {% elsif pages[page.handle].metafields.content_sections.size < 3%}

    <div class="tw-my-9">
        <div class="tw-container tw-mx-auto tw-px-5 lg:tw-px-10 2xl:tw-px-0 xl:tw-max-w-screen-xl irritants-block">
            <div class="tw-bg-aliceblue tw-px-5 lg:tw-px-14 xl:tw-px-16 2xl:tw-px-20 tw-pt-8 tw-pb-2 md:tw-pt-10 tw-text-center tw-mb-6 card">
                {{pages[page.handle].metafields.content_sections.experts}}
            </div>
                {{pages[page.handle].metafields.content_sections.does_not_contain}}          
        </div>
    </div>


    {% else %} 
        <div class="tw-mt-9 tw-mb-7">
            <div class="tw-container tw-mx-auto tw-px-5 lg:tw-px-10 2xl:tw-px-0 xl:tw-max-w-screen-xl irritants-block">
                <div class="lg:tw-grid lg:tw-grid-cols-2 lg:tw-mb-6">
                    <div class="content-left">
                        {{pages[page.handle].metafields.content_sections.content-left}}
                    </div>

                <div class="tw-bg-aliceblue tw-px-5 tw-pt-8 tw-pb-2 md:tw-pt-10 tw-text-center tw-mb-6 card">
                    {{pages[page.handle].metafields.content_sections.experts}}
                </div>
                </div>

                {{pages[page.handle].metafields.content_sections.does_not_contain}}
            </div>
        </div>
    </div>
    {% endif %}
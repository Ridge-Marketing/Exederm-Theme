<div class="tw-h-52 tw-relative tw-pt-1px tw-bg-cover {{class}}" style="background-image:url('{{pages[page.handle].metafields.bg_image.hero}}')">
    <div class="tw-container tw-px-5 lg:tw-px-10 2xl:tw-pl-52 2xl:tw-pr-0 tw-max-w-screen-xl">
        <div class="tw-bg-white tw-opacity-80 lg:tw-opacity-100 lg:tw-bg-transparent tw-w-64 lg:tw-w-auto tw-mt-14">
            <h2 class="tw-text-32px/40px lg:tw-text-45px/56px {{color}} tw-pt-5 tw-pb-6 tw-pl-4 lg:tw-pl-0 tw-pr-8">
                {{page.title}}
            </h2>
        </div>
    </div>
    </div>

    <div class="tw-bg-tan tw-mb-6 lg:tw-mb-8 tw-py-9 lg:tw-pb-14">
        <div class="tw-container tw-px-5 lg:tw-px-10 2xl:tw-pl-52 2xl:tw-pr-0 tw-max-w-screen-xl">

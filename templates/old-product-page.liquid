      <!-- <div class="wrapper" style="max-width:1270px">
      <div class="grid__item large--two-thirds">
         
          {{ prod_desc['extended_description'] }}    
        </div>
      </div> -->
  
      <div class="tw-mt-14">
        {% section 'top-rated.liquid' %}
      </div>
      
  
      <div class="wrapper main-content tw-container tw-mx-auto xl:tw-max-w-1336px">
      <div class="clearfix"></div>
     
     <!--section for recommended products collection-->
             
        
         <div class="clearfix"></div>
  
      <div class="grid__item large--whole">
           
  
     <div class="yotpo yotpo-main-widget clearfix"
            data-product-id="{{ product.id }}"
            data-name="{{ product.title | escape }}"
            data-url="{{ shop.url }}{{ product.url }}"

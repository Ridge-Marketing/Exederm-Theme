<div class="tw-text-center tw-bg-cover tw-w-full">
  <div class="tw-py-10 tw-px-6">
    <h2 class="tw-text-32px/40px tw-text-matterhorn tw-font-medium" style="color:#535353">
      Why Exederm?
    </h2>
    <p class="tw-mt-3 tw-text-20px/25px 2xl:tw-px-60">
      {{ section.settings.subheading }}
    </p>
    <div class="tw-mt-12 lg:tw-flex tw-flex-row tw-justify-center tw-items-center tw-text-center lg:tw-text-left tw-mx-auto tw-gap-x-16" style="max-width:900px;">
      <div class="tw-inline-block tw-mx-auto tw-w-24">
        <img
          class="tw-w-full"
          src="https://cdn.shopify.com/s/files/1/0561/8571/6895/files/award-badge.png?v=1626799267"
          alt="The badge of the National Eczema Association">
      </div>
      <p style="font-weight:400;" class="tw-flex-1 tw-text-22px/28px tw-font-encode-sans tw-font-medium tw-mt-8 lg:tw-mt-0">
        {{ section.settings.award_text }}
      </p>
    </div>
  </div>
</div>

